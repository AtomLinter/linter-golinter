{
  "name": "linter-golinter",
  "main": "lib/main.js",
  "version": "1.2.0",
  "description": "Check Go files with golint tool",
  "keywords": [
    "go",
    "golang",
    "linter"
  ],
  "configSchema": {
    "executablePath": {
      "title": "golint Executable Path",
      "description": "The path to `golint` executable",
      "type": "string",
      "default": "golint"
    },
    "extraOptions": {
      "title": "Extra Options",
      "description": "Options for `golint` command",
      "type": "string",
      "default": "-min_confidence=0.8"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-golinter.git"
  },
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-golinter/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-golinter",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "lint": "coffeelint lib && eslint spec",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "^8.0.0",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^3.6.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
